            <Font size="21.0" />
         </font>
      </Label>
      <TextField fx:id="tfId" layoutX="231.0" layoutY="78.0" promptText="ID" />
      <Button fx:id="btnChercher" layoutX="406.0" layoutY="77.0" mnemonicParsing="false" onAction="#chercherEmp" style="-fx-background-color: black;" text="Chercher" textFill="WHITE" />
      <Button fx:id="btnBack" layoutX="34.0" layoutY="25.0" mnemonicParsing="false" onAction="#ActionRetourEnArriere" prefHeight="31.0" prefWidth="55.0" style="-fx-background-color: #ffaa80;" text="back" />
   </children>
