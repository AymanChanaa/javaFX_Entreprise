<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javafx_employe.Controllers.ModifierInfEmpController">
   <children>
      <Label layoutX="131.0" layoutY="23.0" text="Modifier Informations Employé">
         <font>
            <Font name="Arial" size="25.0" />
         </font>
      </Label>
      <Label layoutX="130.0" layoutY="125.0" text="Nom">
         <font>
            <Font size="21.0" />
         </font>
      </Label>
      <TextField fx:id="tfNom" layoutX="319.0" layoutY="128.0" promptText="Name" />
      <Label layoutX="130.0" layoutY="180.0" text="Salaire">
         <font>
            <Font size="21.0" />
         </font>
      </Label>
      <TextField fx:id="tfSalaire" layoutX="319.0" layoutY="183.0" promptText="Salary" />
      <Label layoutX="130.0" layoutY="229.0" text="Age">
         <font>
            <Font size="21.0" />
         </font>
      </Label>
      <TextField fx:id="tfAge" layoutX="319.0" layoutY="232.0" promptText="Age" />
      <Label layoutX="130.0" layoutY="281.0" text="Nom département">
         <font>
            <Font size="21.0" />
         </font>
      </Label>
